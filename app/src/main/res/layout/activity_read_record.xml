<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReadRecord">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="employee id" />

    <EditText
        android:id="@+id/read_empty_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_get_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_get_record" />

    <TextView
        android:id="@+id/read_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Name" />

    <TextView
        android:id="@+id/read_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Name" />

    <TextView
        android:id="@+id/read_insured"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insured" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_back"
        tools:text="@string/btn_back" />
</LinearLayout>